<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".camera.Camera">
    <TextureView
        android:id="@+id/id_texture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:background="#0E4981">
            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_lens_24"
                android:layout_gravity="center"
                android:background="@null"
                android:visibility="invisible"/>
            <ImageButton
                android:id="@+id/btn_takepicture"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_lens_24"
                android:layout_gravity="center"
                android:background="@null"/>
            <ImageButton
                android:id="@+id/btn_focusMode"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/focus_mode"
                android:src="@drawable/ic_baseline_cameraswitch_24"
                android:layout_gravity="center"
                android:background="@null"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>